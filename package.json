{
	"name": "@miketromba/polar-cli",
	"version": "0.1.4",
	"description": "Unofficial CLI for the Polar (polar.sh) platform â€” optimized for developers and AI agents",
	"author": "Michael Tromba",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/miketromba/polar-cli"
	},
	"homepage": "https://github.com/miketromba/polar-cli#readme",
	"bugs": {
		"url": "https://github.com/miketromba/polar-cli/issues"
	},
	"keywords": [
		"polar",
		"polar.sh",
		"cli",
		"unofficial",
		"subscriptions",
		"payments",
		"monetization",
		"saas",
		"developer-tools",
		"ai-agent"
	],
	"type": "module",
	"bin": {
		"polar": "./dist/polar.js"
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"engines": {
		"node": ">=18.0.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"dev": "bun run bin/polar.ts",
		"build": "bun run scripts/build.ts",
		"prepublishOnly": "bun run lint && bun run typecheck && bun test && bun run build",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"test:unit": "bun test tests/unit",
		"test:integration": "bun test tests/integration",
		"polar": "bun run bin/polar.ts",
		"lint": "bunx biome check .",
		"lint:fix": "bunx biome check --write .",
		"format": "bunx biome format --write .",
		"typecheck": "bunx tsc --noEmit",
		"prepare": "husky || true"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.4.1",
		"@types/bun": "latest",
		"husky": "^9.1.7"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@polar-sh/sdk": "^0.43.1",
		"chalk": "^5.6.2",
		"commander": "^14.0.3"
	}
}
